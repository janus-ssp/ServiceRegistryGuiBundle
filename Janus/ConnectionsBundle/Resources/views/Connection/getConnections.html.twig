{% extends "JanusConnectionsBundle::layout.html.twig" %}

{% block title "Symfony - Connections" %}

{% block content_header '' %}

{% block content %}
    <h1 class="title">{{ 'connection.list.headline'|trans({}, 'JanusConnectionsBundle') }}</h1>

    <p>
        {{ 'connection.offset'|trans({}, 'JanusConnectionsBundle') }}: {{ data.offset ?: '-' }}, {{ 'connection.limit'|trans({}, 'JanusConnectionsBundle') }}: {{ data.limit }}
    </p>

    <ul id="connection-list">
        {% for id, connection in data.connections %}
        <li>
            <a href="{{ path('get_connection', {'id': id}) }}">{{ connection }}</a>
            [<a href="{{ path('edit_connections', {'id': id}) }}">{{ 'connection.edit.link'|trans({}, 'JanusConnectionsBundle') }}</a>]
            [<a href="{{ path('remove_connections', {'id': id}) }}">{{ 'connection.remove.link'|trans({}, 'JanusConnectionsBundle') }}</a>]
        </li>
        {% else %}
        <li>{{ 'connection.list.empty'|trans({}, 'JanusConnectionsBundle') }}</li>
        {% endfor %}
    </ul>
    <p>
        <a href="{{ path('new_connection') }}">{{ 'connection.new.link'|trans({}, 'JanusConnectionsBundle') }}</a>
    </p>
{% endblock %}

{% set code = code(_self) %}
